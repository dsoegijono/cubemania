<section id="timer">
  <div class="scramble"><%= @scramble %></div>
  <div class="time"><%=ft 0 %></div>
  <%= semantic_form_for Single.new, :url => puzzle_timers_path(params[:puzzle_id]), :remote => true do |form| %>
    <%= form.inputs do %>
      <%= form.input :human_time, :label => 'Time', :input_html => { :value => "" } %>
      <%= form.input :time, :as => :hidden %>
      <%= form.input :scramble, :as => :hidden, :value => @scramble %>
    <% end %>
    <%= form.buttons do %>
      <%= form.commit_button 'Submit' %>
    <% end %>
  <% end %>
  <%= link_to 'Set times manually', '#', :id => 'toggle' %>
</section>
<%= render "stats" %>
<div id="chart">
</div>
<aside id="singles">
  <ul>
    <% @singles.each do |single| %>
      <li><%=ft single.time %></li>
    <% end %>
  </ul>
  <%= will_paginate @singles %>
</aside>

<script type="text/javascript" language="javascript">
  $("#new_single").hide();
  $("#timer .time").show();
</script>