if ($("#notice").length > 0) {
  <% unless flash[:notice].nil? %>
    $("#notice").replace_with("<%=j render 'layouts/notice' %>");
    <% flash.discard %>
  <% else %>
    $("#notice").slideUp("normal", function() {
      $(this).remove();
    });
  <% end %>
} else {
  <% unless flash[:notice].nil? %>
    $("#subnavigation").after("<%=j render 'layouts/notice' %>");
    <% flash.discard %>
  <% end %>
}
$("#singles").prepend($("<%=j render :partial =>'single', :object => @single %>").fadeIn('slow'));
$("#timer form")[0].reset();
$("#timer #scramble").text("<%= @scramble %>");
$("#timer form #single_scramble").val("<%= @scramble %>");
$("#statistics").replaceWith("<%=j render 'statistics' %>");
chart.series[0].addPoint(<%= @single.time %>);
updateStatistics();