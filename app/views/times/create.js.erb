if ($("#notice").length > 0) {
  <% unless flash[:notice].nil? %>
    $("#notice").replace_with("<%= escape_javascript(render 'layouts/notice') %>");
    <% flash.discard %>
  <% else %>
    $("#notice").slideUp("normal", function() {
      $(this).remove();
    });
  <% end %>
} else {
  <% unless flash[:notice].nil? %>
    $("#subnavigation").after("<%= escape_javascript(render 'layouts/notice') %>");
    <% flash.discard %>
  <% end %>
}
$("#singles").prepend($("<%= escape_javascript(render(:partial => 'single', :object => @single)) %>").fadeIn('slow'));
$("#timer form")[0].reset();
$("#timer #scramble").text("<%= @scramble %>");
$("#timer form #single_scramble").val("<%= @scramble %>");
$("#statistics").replaceWith("<%= escape_javascript(render(:partial => 'statistics')) %>");
chart.series[0].addPoint(<%= @single.time %>);
updateStatistics();