<% form_for @item do |form| %>
  <p>
		<%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.error_message_on :name %>
  </p>
  <p>
    <%= form.label :controller %>
    <%= form.text_field :controller %>
    <%= form.error_message_on :controller %>
  </p>
  <p>
    <%= form.label :action %>
    <%= form.text_field :action %>
    <%= form.error_message_on :action %>
  </p>
  <p>
		<%= form.label :description %>
    <%= form.text_field :description %>
    <%= form.error_message_on :description %>
  </p>
  <p>
    <%= form.label :position %>
    <%= form.text_field :position %>
    <%= form.error_message_on :position %>
  </p>
  <p>
    <%= form.submit action_label %>
  </p>
<% end %>