<h1><%= possessive @user.name.titleize %> <%= RecordPresenter.new(@record).record_type %> Record</h1>

<article id="record">
  <header>
    <h2><%= @record.human_time %></h2>
    <small><%=dt @record.set_at %></small>
    <div class="puzzle pos<%= @puzzle.css_position %>">
      <div class="kind pos<%= @puzzle.kind.css_position %>"><%= @puzzle.combined %></div>
    </div>
  </header>

  <table id="singles">
    <thead>
      <tr>
        <th>Solve</th>
        <th>Time</th>
        <th>Scramble</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <% @record.singles.each_with_index do |single, i| %>
        <tr class="<%= cycle 'even', 'odd' %>">
          <td><%= i + 1 %></td>
          <td><strong><%= single.human_time %></strong></td>
          <td><small><%= single.scramble %><small></td>
          <td><%= single.comment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>

<p class="suggestion">
  <%= link_to "Post on Facebook!", share_puzzle_record_path(@puzzle, @record), :method => :post %>
</p>