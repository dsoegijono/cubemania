<tr class="record rank<%= record_counter + offset + 1 %>">
  <th><span><%= record_counter + offset + 1 %></span></th>
  <td><cite><%= link_to record.user.name, record.user %></cite></td>
  <td><strong><%=ft record.time %></strong></td>
  <td><small><%=d record.created_at %></small></td>
  <td><blockquote><p><%=h record.comment %></p></blockquote></td>
</tr>