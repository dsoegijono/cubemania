<%= semantic_form_for [@post, @comment ||= @post.comments.build], :remote => true do |form| %>
  <%= form.inputs do %>
    <%= form.input :content %>
  <% end %>
  <%= form.actions do %>
    <%= form.action :submit, :button_html => { :value => 'Respond', :disable_with => 'Wait...' } %>
  <% end %>
<% end %>