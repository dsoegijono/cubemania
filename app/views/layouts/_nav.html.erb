<nav class="main">
  <ul>
    <% for item in items %>
      <li<%= ' class="selected"'.html_safe if item.selected?(params) %>>
        <%= link_to item.name, item.path %>
      </li>
    <% end %>

    <% if logged_in? %>
    <li class="session"><%= link_to "Logout", logout_path %></li>
    <li class="session<%= ' selected' if profile_page? %>"><%= link_to "#{current_user.name}'s Profile", user_path(current_user) %></li>
    <% else %>
    <li class="session<%= ' selected' if controller? :logins %>"><%= link_to "Login", login_path %></li>
    <% end %>
  </ul>
</nav>
