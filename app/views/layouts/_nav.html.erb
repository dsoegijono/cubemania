<nav class="main">
  <ul>
    <% navigation.each do |item| %>
    <li<%= ' class="selected"'.html_safe if current_item?(item) %>><%= link_to item[:name], item[:path], :rel => (item[:backbone] ? "routing" : "") %></li>
    <% end %>
    <% if logged_in? %>
    <li class="session"><%= link_to "Logout", logout_path %></li>
    <li class="session"><%= link_to "#{current_user.name}'s Profile", current_user, :rel => "routing", :data => { :user_data => current_user.to_json }, :id => "user-profile" %></li>
    <% else %>
    <li class="session<%= ' selected' if controller? :logins %>"><%= link_to "Login", login_path %></li>
    <% end %>
  </ul>
</nav>