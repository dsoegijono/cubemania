<%= error_messages_for :puzzle %>

<% form_for @puzzle, :html => { :multipart => true } do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :image %>
    <%= file_column_field 'puzzle', 'image' %>
  </p>
  <p>
    <%= form.label :kind %>
    <%= form.select :kind_id, Kind.find(:all, :order => 'name').collect {|k| [ k.name, k.id ] } %>
  </p>
  <p>
    <%= form.submit action_label %>
  </p>
<% end %>