<%= semantic_form_for @puzzle do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <%= form.input :kind, :include_blank => false %>
    <%= form.input :attempt_count %>
    <%= form.input :scramble_length %>
    <%= form.input :average_format, :collection => Puzzle::FORMATS.collect { |f| [f.titleize, f] }, :include_blank => false %>
    <%= form.input :countdown %>
    <%= form.input :css_position %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button action_label %>
  <% end %>
  <%= image_tag "puzzles.png" %>
<% end %>