<h1>Login</h1>

<%= semantic_form_for @login, :url => session_path do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <%= form.input :password %>
  <% end %>

  <%= form.actions do %>
    <%= form.action :submit, :button_html => { :value => 'Login' } %>
  <% end %>
<% end %>

<%= link_to 'Register', register_path %> &middot;
<%= link_to 'Forgot your password?', new_reset_password_path %>