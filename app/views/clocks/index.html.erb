<div id="chart">
  <p>
    <a href="http://www.adobe.com/go/getflashplayer">
      <img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" />
    </a>
  </p>
</div>
<% content_for :head, javascript_tag("embedChart('#{formatted_clocks_path :xml, :puzzle => params[:puzzle]}')") -%>

<div id="timer">
  <div id="scramble">
  	<%= @puzzle.scramble if @puzzle %>
  </div>
  <p>0</p>
  <a>GO!</a>
</div>
<% content_for :head, javascript_tag("initTimer()") -%>

<input id="user_name" type="text"/>
<% content_for :head, javascript_tag("autocompleteUserName('#{formatted_auto_complete_for_user_name_clocks_path(:js, :puzzle => params[:puzzle])}')") -%>

<table>
  <tr>
  </tr>
<% for clock in @clocks %>
  <tr>
    <td><%= link_to 'Show', clock %></td>
    <td><%= link_to 'Edit', edit_clock_path(clock) %></td>
    <td><%= link_to 'Destroy', clock, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New clock', new_clock_path %>