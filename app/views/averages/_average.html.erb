<tr class="average">
  <th <%=' style="text-decoration: line-through;"' if average.dnf %>><%= t average.time %></th>
<%- for single in average.singles -%>
  <td><small<%= ' style="text-decoration: line-through;"' if single.dnf %>><%=t single.time %></small></td>
<%- end -%>
  <td><small><%=dt average.created_at %></small></td>
  <td><%= link_to 'Destroy', user_puzzle_average_path(@user, @puzzle, average), :confirm => 'Are you sure?', :method => :delete if current_user.id == average.user_id or admin? %></td>
</tr>