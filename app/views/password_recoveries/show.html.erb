<h1>Password Recovery</h1>

<div class="announcement">
	Enter your email address to get your new password sent.
</div>

<% form_for :recovery, @recovery, :url => password_recovery_path do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.error_message_on :email %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>