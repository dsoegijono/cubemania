<tr class="record <%= cycle 'even', 'odd' %>">
  <th>
    <div class="puzzle" style="background-image: url(<%= record[:single].puzzle.image.url %>)">
      <%= raw "<div class='kind' style='background-image: url(#{record[:single].puzzle.kind.image.url})'></div>" unless record[:single].puzzle.kind.image_file_name.nil? %>
    </div>
  </th>
  <td>
    <cite>
      <%= record[:single].puzzle.name %>
      <small>(<%=h record[:single].puzzle.kind.name %>)</small>
    </cite>
  </td>
  <td><strong><%=ft record[:single].time %></strong></td>
  <td><small><%=d record[:single].created_at %></small></td>
  <td><strong><%= record[:average].nil? ? 'none' : ft(record[:average].time) %></strong></td>
  <td><small><%=d record[:average].created_at unless record[:average].nil? %></small></td>
</tr>