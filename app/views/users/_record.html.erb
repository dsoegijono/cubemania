<tr class="record <%= cycle 'odd', 'even', :name => 'record' %>">
  <th>
    <div class="puzzle" style="background-image: url(<%= record[:single].puzzle.image.url(:small) %>)">
      <%= "<div class='kind' style='background-image: url(#{record[:single].puzzle.kind.image.url(:small)})'></div>" unless record[:single].puzzle.kind.image_file_name.nil? %>
    </div>
  </th>
  <td>
    <cite>
      <strong><%= link_to_if self?, record[:single].puzzle.name, user_puzzle_averages_path(record[:single].user_id, record[:single].puzzle) %></strong>
    </cite>
  </td>
  <td class="single disabled"><small><%=d record[:single].created_at %></small></td>
  <td class="single disabled time"><strong><%=t record[:single].time %></strong></td>
  <td class="average"><small><%=d record[:average].created_at unless record[:average].nil? %></small></td>
  <td class="average time"><strong><%= record[:average].nil? ? 'none' : t(record[:average].time) %></strong></td>
</tr>