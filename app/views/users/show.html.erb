<h1 id="user"><%= @user.name %></h1>
<div id="batches">
  <% unless @user.wca.blank? %>
    <%= render :partial => 'batch', :locals => { :link => wca(@user.wca), :id => 'wca' } %>
  <% end %>
  <%= render :partial => 'batch', :locals => { :link => twitter('timhabermaas'), :id => 'twitter' } %>
  <%= render :partial => 'batch', :locals => { :link => facebook(123124), :id => 'facebook' } %>
  <small><%= @user.points %></small>
  <% if not self? or admin? %>
  <div id="challenge">
    <%= link_to '&nbsp;', new_puzzle_user_match_path(:user_id => @user), :class => 'icon' %>
    <%= link_to "Challenge #{@user.name}", new_puzzle_user_match_path(:user_id => @user), :class => 'text' %>
  </div>
  <% end %>
</div>
<div class="clear"></div>

<table id="user_records">
  <thead>
    <tr>
      <th colspan="2"><strong>records</strong></th>
      <th colspan="2" class="tabs"><%= link_to_function 'Single', "$('a.single').addClass('checked');$('a.average').removeClass('checked');$('td.single').removeClass('disabled');$('td.average').addClass('disabled')", :class => 'single' %> <%= link_to_function 'Average', "$('a.average').addClass('checked'); $('a.single').removeClass('checked');$('td.average').removeClass('disabled');$('td.single').addClass('disabled')", :class => 'checked average'%></th>
    </tr>
  </thead>
  <tbody>
    <%= partial 'record', :collection => @records %>
  </tbody>
</table>

<table id="matches">
  <thead>
    <tr>
      <th colspan="4"><strong>matches</strong></th>
    </tr>
  </thead>
  <tbody>
    <%= partial 'match', :collection => @matches %>
  </tbody>
</table>
<div class="clear"></div>