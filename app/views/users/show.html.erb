<%- if current_user? @user -%>
<div id="admin">
  <%= link_to_function 'Edit Account', "$(this).textToggle('Edit Account', 'Close'); $('#form').slideToggle('fast')" %>
</div>
<div id="form" style="display: none">
  <%= render :partial => 'form' %>
</div>
<%- end -%>

<h1><%= @user.name %></h1>

<%- if @records.empty? -%>
<p class="challenge">
<%- if current_user? @user -%>
  How fast do you solve the cube?<br/>
  <%= link_to 'Stop your times and get the record!', times_path %>
<%- else -%>
  <%= @user.name %> has no personal records yet. <%= link_to 'Do you?', times_path if logged_in? %>
<%- end -%>
</p>
<%- else -%>
<table id="records">
  <%= partial 'record', :collection => @records %>
</table>
<%- end -%>