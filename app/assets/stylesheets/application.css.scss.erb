$width: 1000px;

@import "reset";
@import "base";
@import "header";
@import "navigation";
@import "subnavigation";
@import "notice";
@import "content";
@import "footer";

<% Puzzle.all.uniq(&:css_class).each do |puzzle| %>
  .puzzle.<%= puzzle.css_class %> {
    background-position: <%= puzzle.css_position * -100 %>px 0px;
  }
  #puzzles a:hover .puzzle.<%= puzzle.css_class %>, #puzzles li.checked a .puzzle.<%= puzzle.css_class %> {
    background-position: <%= puzzle.css_position * -100 - 50 %>px 0px;
  }
<% end %>

<% Kind.all.each do |kind| %>
  .kind.<%= kind.css_class %> {
    background-position: <%= kind.css_position * -25 %>px 0px;
  }
<% end %>