<% 20.times do |i| %>
  #puzzles .puzzle.pos<%= i %> {
    background-position: <%= i * -50 %>px -50px;
  }
  #records .puzzle.pos<%= i %>, #puzzles a:hover .puzzle.pos<%= i %>, #puzzles li.checked a .puzzle.pos<%= i %> {
    background-position: <%= i * -50 %>px 0px;
  }
  .kind.pos<%= i %> {
    background-position: <%= i * -25 %>px 0px;
  }
<% end %>