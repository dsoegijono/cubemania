<div class="current">
  <h4>Current</h4>
  Average of 5: <strong class="avg5"><%=formatTime @avg5 %></strong><br />
  Average of 12: <strong class="avg12"><%=formatTime @avg12 %></strong></small>
</div>
<div class="best">
  <h4>Best</h4>
  <% for r in @records: %>
    <% if r?: %>
      <%= r.capitalizedTitle() %>:
      <strong><%= formatTime r.get("time") %></strong>
      <small><a href="<%= r.getHtmlUrl() %>">Details</a></small><br />
    <% end %>
  <% end %>
</div>