package {		import flash.display.Sprite;		public class Grid extends Sprite {				private static const STEP_COUNT:int = 5;				private var w:int;		private var h:int;				public function Grid(w:int, h:int) {			this.w = w;			this.h = h;			graphics.lineStyle(0, 0xFFFFFF, 0.1);			drawHorizontalLines();			drawVerticalLines();		}				private function drawHorizontalLines():void {			var stepHeight:int = h / STEP_COUNT;			for (var i:uint = 1; i < STEP_COUNT; i++) {				drawHorizontalLine(i * stepHeight);			}		}				private function drawHorizontalLine(y:int):void {			graphics.moveTo(0, y);			graphics.lineTo(w, y);		}				private function drawVerticalLines():void {			var stepWidth:int = w / STEP_COUNT;			for (var i:uint = 1; i < STEP_COUNT; i++) {				drawVerticalLine(i * stepWidth);			}		}				private function drawVerticalLine(x:int):void {			graphics.moveTo(x, 0);			graphics.lineTo(x, h);		}			}	}