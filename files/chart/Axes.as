package {		import flash.display.Sprite;	import flash.geom.Point;		public class Axes extends Sprite {				private var horizontal:HorizontalAxis;		private var vertical:VerticalAxis;				public function Axes(hWidth:int, hHeight:int, vWidth:int, vHeight:int) {			horizontal = new HorizontalAxis(hWidth, hHeight);			horizontal.x = vWidth;			horizontal.y = vHeight;			addChild(horizontal);			vertical = new VerticalAxis(vWidth, vHeight);			addChild(vertical);		}				public function getItemCount():int {			return horizontal.getItemCount();		}				public function setItemCount(count:int):void {			horizontal.setItemCount(count);		}				public function getClosestIndexes(x:int):Array {			return horizontal.getClosestIndexes(x);		}				public function getMaxHorizontalPosition():int {			return horizontal.getMaxPosition();		}				public function toPosition(index:int, v:String):Point {			return new Point(horizontal.toPosition(index), vertical.toPosition(v));		}				public function updateExtremes(min:String, max:String):void {			vertical.updateExtremes(min, max);		}		public function resetExtremes():void {			vertical.resetExtreme();		}				public function draw():void {			horizontal.draw();			vertical.draw();		}			}	}