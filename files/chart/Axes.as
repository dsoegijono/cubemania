package {		import flash.display.Sprite;	import flash.geom.Point;		public class Axes extends Sprite {				private var horizontal:HorizontalAxis;		private var vertical:VerticalAxis;				public function Axes(hWidth:int, hHeight:int, vWidth:int, vHeight:int) {			horizontal = new HorizontalAxis(hWidth, hHeight);			horizontal.x = vWidth;			horizontal.y = vHeight;			addChild(horizontal);			vertical = new VerticalAxis(vWidth, vHeight);			addChild(vertical);		}				public function getMaxHorizontalPosition():int {			return horizontal.getMaxPosition();		}				public function toPosition(h:String, v:String):Point {			return new Point(horizontal.toPosition(h), vertical.toPosition(v));		}				public function updateExtremes(h:String, v:String):void {			horizontal.updateExtreme(h);			vertical.updateExtreme(v);		}		public function resetExtremes():void {			horizontal.resetExtreme();			vertical.resetExtreme();		}				public function draw():void {			horizontal.draw();			vertical.draw();		}			}	}