package {		import flash.display.Sprite;	import flash.geom.Point;		public class Axes extends Sprite {				private var horizontal:HorizontalAxis;		private var vertical:VerticalAxis;				public function Axes(hWidth:int, hHeight:int, vWidth:int, vHeight:int) {			horizontal = new HorizontalAxis(hWidth, hHeight);			horizontal.x = vWidth;			horizontal.y = vHeight;			addChild(horizontal);			vertical = new VerticalAxis(vWidth, vHeight);			addChild(vertical);		}				public function getWidth():int {			return vertical.getWidth() + horizontal.getWidth();		}				public function getHorizontal():HorizontalAxis {			return horizontal;		}				public function getVertical():VerticalAxis {			return vertical;		}				public function getPosition(index:int, v:int):Point {			return new Point(horizontal.getPosition(index), vertical.getPosition(v));		}				public function draw():void {			horizontal.draw();			vertical.draw();		}			}	}