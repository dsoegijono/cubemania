package {		import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.events.MouseEvent;		public class SeriesLabel extends Sprite {				private var field:TextField;				public function SeriesLabel(title:String, color:int) {			initField(title, color);			buttonMode = true;			useHandCursor = true;			addEventListener(MouseEvent.MOUSE_OVER, onMouseOver);			addEventListener(MouseEvent.MOUSE_OUT, onMouseOut);		}				private function initField(title:String, color:int):void {			field = new TextField();			field.autoSize = TextFieldAutoSize.LEFT;			field.selectable = false;			field.text = title;			field.setTextFormat(new TextFormat("Verdana", 12, color));			cacheAsBitmap = true;			addChild(field);		}				public function position(x:int, y:int):void {			this.x = x + 12;			this.y = y - field.height / 2;		}				private function onMouseOver(event:MouseEvent):void {			var format:TextFormat = field.getTextFormat();			format.bold = true;			field.setTextFormat(format);		}				private function onMouseOut(event:MouseEvent):void {			var format:TextFormat = field.getTextFormat();			format.bold = false;			field.setTextFormat(format);		}			}	}