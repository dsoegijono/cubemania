package {		public class HorizontalAxis extends Axis {				private var count:int = 1;				public function HorizontalAxis(w:int, h:int) {			super(w, h);		}				public function getItemCount():int {			return count;		}				public function setItemCount(count:int):void {			this.count = count;		}				public function getClosestIndexes(position:int):Array {			var index:Number = count - count * position / w;			if (index < 0) index = 0;			else if (index > count) index = count;			return [Math.floor(index), Math.ceil(index)];		}				public function getPosition(index:int):int {			var ratio:Number = (count - index) / count;			return ratio * w;		}				public function draw():void {			drawAxis();		}				private function drawAxis():void {			graphics.clear();			graphics.lineStyle(2, 0xFFFFFF);			graphics.moveTo(0, 0);			graphics.lineTo(w, 0);		}	}	}