package {		import flash.external.ExternalInterface;		public class HorizontalAxis extends Axis {				private var count:int = 20;				public function HorizontalAxis(w:int, h:int) {			super(w, h);			createLabels();		}				private function createLabels():void {			/*minLabel = createLabel(min);			minLabel.x = 5;			maxLabel = createLabel(max);*/		}				private function createLabel(value:Number):AxisLabel {			var label:AxisLabel = new AxisLabel();			label.y = 5;			addChild(label);			return label;		}				public function getItemCount():int {			return count;		}				public function setItemCount(count:int):void {			this.count = count;		}				public function getClosestIndexes(x:int):Array {			var index:Number = count - count * x / w;			if (index < 0) index = 0;			else if (index > count) index = count;			return [Math.floor(index), Math.ceil(index)];		}				public function getMaxPosition():int {			return w;		}				public function toPosition(index:int):int {			var ratio:Number = (count - index) / count;			return ratio * w;		}				public function draw():void {			graphics.clear();			drawAxis();			/*minLabel.setTitle(format(min));			maxLabel.setTitle(format(max));			maxLabel.x = w - maxLabel.width - 5;*/		}				private function drawAxis():void {			graphics.lineStyle(2, 0xFFFFFF);			graphics.moveTo(0, 0);			graphics.lineTo(w, 0);		}				/*private function format(value:Number):String {			var date:Date = new Date();			date.setTime(value);			return formatMonth(date) + " " + date.getDate() + ", " + date.getFullYear();		}*/	}	}