package {	import flash.external.ExternalInterface;	public class HorizontalAxis extends Axis {				private var min:Number = Infinity;		private var max:Number = -Infinity;				public function HorizontalAxis(w:int, h:int) {			super(w, h);			createLabels();		}				private function createLabels():void {			minLabel = createLabel(min);			minLabel.x = 5;			maxLabel = createLabel(max);		}				private function createLabel(value:Number):AxisLabel {			var label:AxisLabel = new AxisLabel();			label.y = 5;			addChild(label);			return label;		}				public function getMaxPosition():int {			return w;		}				public function toPosition(value:String):int {			var ratio:Number = (Date.parse(value) - min) / (max - min);			return ratio * w;		}				public function updateExtreme(value:String):void {			var v:Number = Date.parse(value);			if (v < min) min = v;			else if (v > max) max = v;		}				public function resetExtreme():void {			min = Infinity;			max = -Infinity;		}				public function draw():void {			graphics.clear();			drawAxis();			minLabel.setTitle(format(min));			maxLabel.setTitle(format(max));			maxLabel.x = w - maxLabel.width - 5;			//drawGrid();		}				private function drawAxis():void {			graphics.lineStyle(2, 0xFFFFFF);			graphics.moveTo(0, 0);			graphics.lineTo(w, 0);		}				private function format(value:Number):String {			var date:Date = new Date();			date.setTime(value);			return formatMonth(date) + " " + date.getDate() + ", " + date.getFullYear();		}				private function formatMonth(date:Date):String {			return ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"][date.getMonth()];		}				/*private function drawGrid():void {			var interval:int = max - min;			var step:int = interval / 10;			for (var i:uint = 1; i < 10; i++) {				drawLine(i * step / interval * w);				createLabel(min + i * step, i * step / interval * w);			}		}				private function drawLine(x:int):void {			graphics.lineStyle(0, 0xFFFFFF, 0.1);			graphics.moveTo(x, 0);			graphics.lineTo(x, -stage.stageHeight + h);		}*/			}	}