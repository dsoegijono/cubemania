package {		import flash.events.Event;		public class TipEvent extends Event {				public static const SHOW:String = "showTip";		public static const HIDE:String = "hideTip";				private var tip:String;		private var x:int;		private var y:int;				public function TipEvent(type:String, tip:String = null, x:int = 0, y:int = 0) {			super(type, true, true);			this.tip = tip;			this.x = x;			this.y = y;		}				public function getTip():String {			return tip;		}				public function getX():int {			return x;		}				public function getY():int {			return y;		}				override public function clone():Event {			return new TipEvent(type, tip);		}			}	}