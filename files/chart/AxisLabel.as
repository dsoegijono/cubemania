package {		import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;		public class AxisLabel extends Sprite {				private var field:TextField;				public function AxisLabel() {			field = new TextField();			field.autoSize = TextFieldAutoSize.LEFT;			addChild(field);		}				public function setTitle(title:String):void {			field.text = title;			field.setTextFormat(new TextFormat("Verdana", 12, 0xFFFFFF));		}			}	}