package {		import flash.display.Sprite;	import flash.geom.Point;	import flash.events.Event;	import flash.events.MouseEvent;		public class Item extends Sprite {				private var v:int;		private var tip:String;		private var radius:Number;		private var targetRadius:int;		private var axes:Axes;		private var color:int;				public function Item(data:XML, axes:Axes, color:int) {			parseData(data);			this.axes = axes;			this.color = color;			radius = 5;		}				private function parseData(data:XML):void {			v = int(data.@v);			tip = data.@tip;		}				public function getV():int {			return v;		}				public function get distance():Number {			var dx:Number = parent.mouseX - x;			var dy:Number = parent.mouseY - y;			return Math.sqrt(dx * dx + dy * dy);		}				public function draw(index:int):void {			position(index);			drawDot();		}				private function position(index:int):void {			var position:Point = axes.getPosition(index, v);			x = position.x;			y = position.y;		}				private function drawDot():void {			graphics.clear();			graphics.beginFill(color);			graphics.lineStyle(2, 0x5C7DA0);			graphics.drawCircle(0, 0, radius);		}				public function select():void {			targetRadius = 7;			dispatchEvent(new TipEvent(TipEvent.SHOW, tip, x, y));			addEventListener(Event.ENTER_FRAME, onEnterFrame);		}				public function deselect():void {			targetRadius = 5;			dispatchEvent(new TipEvent(TipEvent.HIDE));			addEventListener(Event.ENTER_FRAME, onEnterFrame);		}				private function onEnterFrame(event:Event):void {			radius += (targetRadius - radius) / 4;			drawDot();			if (Math.abs(targetRadius - radius) <= 0.1) {				radius = targetRadius;				removeEventListener(Event.ENTER_FRAME, onEnterFrame);			}		}			}	}